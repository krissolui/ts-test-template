	"license": "MIT",
	"devDependencies": {
		"@types/chai": "^4.3.1",
		"@types/mocha": "^9.1.1",
		"chai": "^4.3.6",
		"mocha": "^10.0.0",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.4"
	}
}
