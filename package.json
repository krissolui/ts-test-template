{
	"name": "ts-test-template",
	"version": "1.0.0",
	"description": "Typescript configuration template for running tests",
	"main": "index.js",
	"scripts": {
		"build": "tsc -p ./tsconfig.prod.json",
		"build::live": "tsc -p ./tsconfig.prod.json --watch",
		"test": "mocha --require ts-node/register ./test/*"
	},
